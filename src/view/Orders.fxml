          <TableColumn fx:id="idTC" prefWidth="50.0" text="ID"/>
          <TableColumn fx:id="amountTC" minWidth="0.0" prefWidth="100.0" text="Amount" />
          <TableColumn fx:id="currencyTC" minWidth="0.0" prefWidth="100.0" text="Currency" />
          <TableColumn prefWidth="100.0" text="Status" />
          <TableColumn prefWidth="100.0" text="Actions" />
        </columns>
      </TableView>
	  
	  <Button fx:id="backB" layoutX="2.0" layoutY="520.0" mnemonicParsing="false" text="back"/>
      <Button fx:id="newB" layoutX="50.0" layoutY="520.0" mnemonicParsing="false" onAction="#handleAdd" text="+">
         <font><Font name="System Bold" /></font>
      </Button>
	  
   </children>
</AnchorPane>
